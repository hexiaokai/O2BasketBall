<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.o2sports.hxiao.o2basketball.ArenaDetail">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        android:text="O2 Basketball"
        android:id="@+id/Title"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#ff000000"
        android:textColor="#ffffffff"
        android:textAlignment="center"
        android:textSize="20sp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignBottom="@+id/searchView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Today&apos;s Registration"
        android:id="@+id/regCountText"
        android:layout_below="@+id/Title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/regCount"
        android:layout_below="@+id/regCountText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/regCountText"
        android:layout_alignStart="@+id/regCountText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Today&apos;s Check-in"
        android:id="@+id/checkCountText"
        android:layout_below="@+id/regCount"
        android:layout_alignRight="@+id/Title"
        android:layout_alignEnd="@+id/Title"
        android:layout_alignLeft="@+id/regCount"
        android:layout_alignStart="@+id/regCount" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/checkCount"
        android:layout_below="@+id/checkCountText"
        android:layout_alignLeft="@+id/checkCountText"
        android:layout_alignStart="@+id/checkCountText"
        android:layout_alignRight="@+id/Title"
        android:layout_alignEnd="@+id/Title" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Registration"
        android:id="@+id/regButton"
        android:layout_centerVertical="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Check-in"
        android:id="@+id/checkButton"
        android:layout_below="@+id/regButton"
        android:layout_alignLeft="@+id/regButton"
        android:layout_alignStart="@+id/regButton"
        android:layout_alignRight="@+id/regButton"
        android:layout_alignEnd="@+id/regButton" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/Title"
        android:layout_toLeftOf="@+id/regCountText"
        android:layout_above="@+id/regButton"
        android:background="#ffcdcdcd" />


</RelativeLayout>
